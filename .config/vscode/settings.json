/**
 * Extensions needs to be installed:
 * - EditorConfig for VS Code (editorconfig.editorconfig)
 * - Nomo Dark Icon Theme (be5invis.vscode-icontheme-nomo-dark)
 * - GitHub Copilot (github.copilot)
 * - GitHub Copilot Labs (GitHub.copilot-labs)
 */
{
    /**
     * Editor
     */
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.layoutControl.enabled": false,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.showIcons": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.labelFormat": "medium",
    "workbench.editor.navigationScope": "default",
    "workbench.iconTheme": "vs-nomo-dark",
    "workbench.activityBar.visible": false,
    "workbench.preferredDarkColorTheme": "Solarized Dark",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "workbench.colorTheme": "Solarized Dark",

    "editor.inlineSuggest.enabled": true,
    "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.autoSurround": "languageDefined",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.fontFamily": "Iosevka Pragmatus",
    "editor.fontSize": 15,
    "editor.smoothScrolling": true,
    "editor.renderWhitespace": "selection",
    "editor.cursorBlinking": "solid",
    "editor.acceptSuggestionOnEnter": "off",

    "diffEditor.ignoreTrimWhitespace": false,

    "window.commandCenter": false,
    "window.experimental.useSandbox": true,
    "window.menuBarVisibility": "compact",

    "breadcrumbs.enabled": false,

    /**
     * Files
     */
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "files.encoding": "utf8",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    /**
     * Other
     */
    "telemetry.telemetryLevel": "off",
    "security.workspace.trust.enabled": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "editor.accessibilitySupport": "off",
    "explorer.autoReveal": false,

    /**
     * Language Specific Settings
     */
    "[javascript][typescript][javascriptreact][typescriptreact]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
    },
    "[php]": {
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },

    /**
     * Extension Settings
     */
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1,
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
}
